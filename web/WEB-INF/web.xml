<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>admin_login</servlet-name>
        <servlet-class>Servlets.userLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdvacedSearchApp</servlet-name>
        <servlet-class>Servlets.AdvacedSearchApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>Servlets.search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveDevelopervalidation</servlet-name>
        <servlet-class>Servlets.saveDevelopervalidation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Servlets.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_login</servlet-name>
        <url-pattern>/admin_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdvacedSearchApp</servlet-name>
        <url-pattern>/AdvacedSearchApp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveDevelopervalidation</servlet-name>
        <url-pattern>/saveDevelopervalidation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/system_404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/system_500.jsp</location>
    </error-page>
</web-app>
